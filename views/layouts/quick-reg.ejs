<form action="" class="needs-validation reg" novalidate>
    <div class="form-group">
        <label for="uname">Имя:</label>
        <input type="text" class="form-control" id="uname" placeholder="Введите имя" name="uname">
<!--        <div class="valid-feedback">Valid.</div>-->
<!--        <div class="invalid-feedback">Это поле должно быть заполнено</div>-->
    </div>
    <div class="form-group">
        <label for="lastname">Фамилия:</label>
        <input type="text" class="form-control" id="lastname" placeholder="Введите фамилию" name="lastname">
<!--        <div class="valid-feedback">Valid.</div>-->
<!--        <div class="invalid-feedback">Это поле должно быть заполнено</div>-->
    </div>
    <div class="form-group">
        <label for="email">Адрес email*:</label>
        <input type="text" class="form-control" id="email" placeholder="Введите email" name="email" required>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Это поле должно быть заполнено</div>
    </div>
    <div class="form-group">
        <label for="pwd">Пароль*:</label>
        <input type="password" class="form-control" id="password" placeholder="Введите пароль" name="password" required>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Это поле должно быть заполнено</div>
    </div>
    <div class="form-group">
        <label for="pwd">Подтверждение пароля*:</label>
        <input type="confirmPassword" class="form-control" id="confirmPassword" placeholder="Подтвердите пароль" name="confirmPassword" required>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Это поле должно быть заполнено</div>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="remember" required>
            <span class="small">*Подтверждаю прочтение и полное согласие с условиями Пользовательского соглашения и Политикой конфиденциальности.</span>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Установите этот флажок, чтобы продолжить</div>
        </label>
    </div>
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">Регистрация</button>
        <button type="submit" class="btn btn-primary">Авторизация</button>
    </div>
</form>